# ===========================================
# TecnoDespegue - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database (PostgreSQL)
# Get a free database at: https://supabase.com or https://neon.tech
DATABASE_URL="postgresql://user:password@host:5432/database?schema=public"

# Email (Resend)
# Sign up at: https://resend.com
RESEND_API_KEY="re_xxxxxxxxxxxxx"

# Sentry Error Tracking
# Sign up at: https://sentry.io
SENTRY_DSN="https://xxxxx@xxxxx.ingest.sentry.io/xxxxx"
SENTRY_ORG="your-org"
SENTRY_PROJECT="tecnodespegue"
NEXT_PUBLIC_SENTRY_DSN="https://xxxxx@xxxxx.ingest.sentry.io/xxxxx"

# Analytics (Google Analytics)
NEXT_PUBLIC_GA_MEASUREMENT_ID="G-XXXXXXXXXX"

# Site URL
NEXT_PUBLIC_SITE_URL="https://tecnodespegue.com"

# Giscus Comments (GitHub Discussions)
# Configure at: https://giscus.app
# 1. Enable Discussions in your GitHub repository
# 2. Create a "Comments" category in Discussions
# 3. Go to https://giscus.app and fill in your repo to get the IDs
NEXT_PUBLIC_GISCUS_REPO="Rene-Kuhm/studio-agency"
NEXT_PUBLIC_GISCUS_REPO_ID=""
NEXT_PUBLIC_GISCUS_CATEGORY="Comments"
NEXT_PUBLIC_GISCUS_CATEGORY_ID=""

# Admin Panel
# Generate SESSION_SECRET with: openssl rand -hex 32
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="change-this-strong-password"
SESSION_SECRET="generate-with-openssl-rand-hex-32"
